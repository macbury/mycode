<div class="content">
	<h2>Narzędzia</h2>

	<ul class="tools" id="tools">
		<%= render :partial => @tools %>
	</ul>
	
	<%= will_paginate @tools %>
</div>
<div class="sidebar">
	<% form_tag tools_path, :id => 'search_form' do %>
		<%= hidden_field_tag :sortowanie, params[:sortowanie] || 0 %>
		<%= hidden_field_tag :typ, params[:typ] || -1 %>
		<%= hidden_field_tag :language, params[:language] || -1 %>
		<%= text_field_tag :keyword, params[:search] %>
	<% end %>
	
	<h3>Sortowanie:</h3>
	<ul>
		<%= filter_for :sortowanie, 0, 0, 'Alfabetycznie' %>
		<%= filter_for :sortowanie, 1, 0, 'Popularność' %>
		<%= filter_for :sortowanie, 2, 0, 'Ostatnio dodane' %>
	</ul>
	
	<h3>Typ:</h3>
	<ul>
		<%= filter_for :typ, -1, -1, 'Wszystkie' %>
		<% Tool.typy.each do |name, index| %>
			<%= filter_for :typ, index, -1, name %>
		<% end %>
	</ul>
	
	<h3>Język:</h3>
	<ul>
		<%= filter_for :language, -1, -1, 'Wszystkie' %>
		<% Tool.languages.each do |name, index| %>
			<%= filter_for :language, index, -1, name %>
		<% end %>
	</ul>
</div>